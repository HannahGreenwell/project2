/* GAMES#HOME */
.instructions-container {
  margin: 20px 10px;
  width: 100%;
}

.playButton {
  background-color: red;
  border-radius: 50px;
  display: inline-block;
  width: 100px;
  height: 100px;
  text-align: center;
  margin: 40px auto;
}

.playButton:hover {
  background-color: blue;
}

.playButton a {
  font-size: 20px;
  font-weight: 800;
  font-style: italic;
  text-transform: uppercase;
  letter-spacing: 4px;
  line-height: 100px;
  color: white;
}

h2 {
  font-size: 18px;
  text-transform: uppercase;
  letter-spacing: 1px;
  padding-bottom: 10px;
}


/* GAMES#PLAY */
h2.drawer_play {
  display: none;
}

#canvasContainer {
  position: fixed;
  top: 150px;
  left: 0;
  width: 400px;
  height: 500px;
}

#canvasElement {
  width: 100%;
  height: 100%;
}

#cursor {
  position: absolute;
  background-image: url("<%= asset_path 'pencil.png' %>");
  background-size: cover;
  height: 25px;
  width: 25px;
  opacity: 0;
}
