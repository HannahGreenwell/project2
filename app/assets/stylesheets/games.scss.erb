/* GAMES#HOME */
.instructions-container {
  margin: 30px auto;
  width: 100%;
}

.playButton {
  background-color: red;
  border-radius: 50px;
  display: inline-block;
  width: 100px;
  height: 100px;
  text-align: center;
  margin: 40px auto;
}

.playButton:hover {
  background-color: blue;
}

.playButton a {
  font-size: 20px;
  font-weight: 800;
  font-style: italic;
  text-transform: uppercase;
  letter-spacing: 4px;
  line-height: 100px;
  color: white;
}

h2 {
  font-size: 18px;
  text-transform: uppercase;
  letter-spacing: 1px;
  padding-bottom: 10px;
}


/* GAMES#PLAY */
.game_header {
  width: 880px;
  border-bottom: dashed 1px black;
  margin-bottom: 20px;
}

.game_header h2 {
  font-size: 28px;
}

h2.drawer_play {
  display: none;
}

.game_word {
  color: red;
  font-size: 28px;
}

.game_buttons {
  display: inline-block;
  width: auto;
}

#canvasContainer {
  position: fixed;
  top: 170px;
  left: 30px;
  width: 880px;
  height: 550px;
}

#canvasElement {
  width: 100%;
  height: 100%;
}

#cursor {
  position: absolute;
  background-image: url("<%= asset_path 'pencil.png' %>");
  background-size: cover;
  height: 25px;
  width: 25px;
  opacity: 0;
}

.timer {
  display: inline-block;
  width: 300px;
  height: 20px;
  float: right;
  text-align: right;
  font-size: 18px;
  text-transform: uppercase;
  letter-spacing: 1px;
  padding: 4px;
}

/* GAMES#RESULT */
h2.result {
  font-size: 28px;
  padding: 15px 0 0;
}

.result_word {
  color: red;
  text-transform: uppercase;
  font-weight: 600;
  letter-spacing: 1px;
  font-size: 20px;
}

.games.result p {
  padding-bottom: 10px;
  font-size: 20px;
}

.games.result img {
  border: solid 1px black;
  width: 660px;
  display: block;
}

a.playAgain {
  color: red;
  font-size: 18px;
  font-weight: 600;
  margin-top: 20px;
}

.games.result p:last-child {
  margin-top: 15px;
  font-size: 18px;
}
