<h2><%= @word.word %></h2>

<button id="saveButton" type="button">Save</button>
<button id="clearButton" type="button">Clear</button>

<%= form_for @drawing, html: {multipart: true} do |f|%>

  <div id="imageField">
    <%= f.hidden_field :image, value:"" %>
  </div>

  <%= f.hidden_field :user_id, value:"#{@current_user}" %>

  <%= f.hidden_field :word_id, value:"#{@word.id}" %>

  <%= f.submit %>

<% end %>

<div id="canvasContainer">
</div>

<div class="timer"></div>
