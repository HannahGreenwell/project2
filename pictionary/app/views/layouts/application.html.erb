<!DOCTYPE html>
<html>
  <head>
    <title>Pictionary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">

    <nav class="pages">
      <%= link_to 'Play', pages_home_path %>
       |
      <%= link_to 'All Drawings', words_path %>
    </nav>

    <nav class="user-account">
      <% if @current_user.present? %>
        <%= link_to 'My Drawings', user_gallery_path %>
         |
        <%= link_to 'My Account', edit_user_path(@current_user) %>
         |
        <%= link_to 'Sign Out', login_path, method: 'delete' %>
      <% else %>
        <%= link_to 'Sign In', login_path  %>
         |
        <%= link_to 'Sign Up', new_user_path %>
      <% end %>
    </nav>

    <%= yield %>

  </body>
</html>
