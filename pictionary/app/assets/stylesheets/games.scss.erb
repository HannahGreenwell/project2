.background-div {
  width: 100%;
  height: 100%;
  margin: 0 auto;
}

.background {
  position: fixed;
  width: 600px;
  height: 600px;
  top: 0;
  left: 0;
  z-index: -20;
}

.instructions-wrapper {
  width: 60%;
  min-width: 200px;
  text-align: center;
  margin: 0 auto;
  opacity: 0.9;
  background-color: white;
}

.header-instructions {
  font-size: 2em;
}

.instructions {
  margin: 20px;
  font-size: 1.5em;
}

.play-link {

}

h2.drawer_play {
  display: none;
}

#canvasContainer {
  position: fixed;
  top: 150px;
  left: 0;
  width: 400px;
  height: 500px;
}

#canvasElement {
  width: 100%;
  height: 100%;
}

#cursor {
  position: absolute;
  background-image: url("<%= asset_path 'pencil.png' %>");
  background-size: cover;
  height: 25px;
  width: 25px;
  opacity: 0;
}
